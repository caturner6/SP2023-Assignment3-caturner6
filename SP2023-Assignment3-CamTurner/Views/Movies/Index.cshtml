@model IEnumerable<SP2023_Assignment3_CamTurner.Models.Movies>

@{
    ViewData["Title"] = "Index";
}

<h1>Movie Catalog</h1>

<p>
    <a asp-action="Create">Add a Movie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                IMDB Url
            </th>
            <th>
                Genre
            </th>
            <th>
                Release Year
            </th>
            <th>
                Poster
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IMDBUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @if (item.MoviePoster != null)
                {
                    <img width="100" height="148" src="@Url.Action("GetMoviePoster", "Movies", new {item.Id})" />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
